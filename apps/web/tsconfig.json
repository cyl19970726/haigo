{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@shared/*": [
        "../../packages/shared/src/*"
      ]
    },
    "types": [
      "node",
      "vitest/globals"
    ],
    "jsx": "preserve",
    "allowJs": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "app",
    "components",
    "lib",
    "features",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
