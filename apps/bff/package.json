{
  "name": "@haigo/bff",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "start": "node --enable-source-maps dist/apps/bff/src/main.js",
    "start:dev": "node --watch --watch-path src --enable-source-maps --loader ts-node/esm src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint \"src/**/*.ts\"",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema prisma/schema.prisma",
    "test": "prisma generate --schema prisma/schema.prisma && jest --runInBand",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@haigo/shared": "workspace:*",
    "@nestjs/common": "10.3.7",
    "@nestjs/config": "3.2.0",
    "@nestjs/core": "10.3.7",
    "@nestjs/platform-express": "10.3.7",
    "@nestjs/testing": "10.3.7",
    "@aptos-labs/ts-sdk": "^5.0.0",
    "@noble/hashes": "^1.4.0",
    "@prisma/client": "5.14.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "express": "4.19.2",
    "multer": "1.4.5-lts.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/multer": "1.4.11",
    "@types/node": "20.11.30",
    "@types/supertest": "2.0.16",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "eslint": "8.57.0",
    "jest": "29.7.0",
    "prisma": "5.14.0",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.4.5"
  }
}
