{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2021",
    "outDir": "dist",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "paths": {
      "@haigo/shared": ["../../packages/shared/src/index.ts"],
      "@haigo/shared/config/*": ["../../packages/shared/src/config/*.ts"],
      "@haigo/shared/dto/*": ["../../packages/shared/src/dto/*.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
