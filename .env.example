# -------------------------
# Core Environment
# -------------------------
ENV=dev
APTOS_NETWORK=testnet
# Comma-separated list of GraphQL indexer endpoints. First entry is preferred;
# the BFF will automatically fall back when upstream returns 429/MonthlyCredit errors.
APTOS_INDEXER_URLS=https://indexer.testnet.aptoslabs.com/v1/graphql
APTOS_INDEXER_URL=https://indexer.testnet.aptoslabs.com/v1/graphql

# -------------------------
# Backend / BFF
# -------------------------
PORT=3001
HASURA_URL=http://localhost:8080/v1/graphql
HASURA_ADMIN_SECRET=haigo-secret
MEDIA_ROOT=./storage/media

# -------------------------
# Database
# -------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=haigo
POSTGRES_PASSWORD=haigo
POSTGRES_DB=haigo

# -------------------------
# Frontend Exposure
# -------------------------
NEXT_PUBLIC_BFF_URL=http://localhost:3001
NEXT_PUBLIC_HASURA_URL=http://localhost:8080/v1/graphql
NEXT_PUBLIC_APTOS_MODULE=0x123

# -------------------------
# Storage Providers
# -------------------------
STORAGE_BUCKET=local-media
STORAGE_ENDPOINT=http://localhost:9000

# -------------------------
# MCP (Model Context Protocol) Servers
# -------------------------
# Aptos MCP Server
APTOS_BOT_KEY=your_aptos_bot_api_key_here

# Project API Server
API_KEY=your_api_key_here
API_BASE_URL=https://api.haigo.com
PROJECT_ID=haigo

# Development Tools
NODE_PATH=node
PROJECT_ROOT=/Users/hhh0x/product/haigo
DATABASE_URL=postgresql://haigo:haigo@localhost:5432/haigo
BFF_DEBUG_LOG_DIR=./storage/logs/bff
